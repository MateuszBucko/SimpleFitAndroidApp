<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.m.fitproject.MainActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/helloText"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textSize="20dp"
        android:text="@string/helloLabel"
        android:textAlignment="center"
        android:layout_marginBottom="80px"
        android:layout_weight="0.03" />
    <TextView
        android:id="@+id/startWeightText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:text="@string/startWeightLabel"
        android:textAlignment="center"
        android:layout_marginBottom="20px"
        android:layout_weight="0.03" />
    <TextView
        android:id="@+id/startBMIText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:text="@string/startBMI"
        android:textAlignment="center"
        android:layout_marginBottom="40px"
        android:layout_weight="0.03" />
    <TextView
        android:id="@+id/actualWeightText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:text="@string/actualWeightLabel"
        android:textAlignment="center"
        android:layout_marginBottom="20px"
        android:layout_weight="0.03" />
    <TextView
        android:id="@+id/actualBMIText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:text="@string/actualBMI"
        android:textAlignment="center"
        android:layout_marginBottom="40px"
        android:layout_weight="0.03" />
    <TextView
        android:id="@+id/differenceWeightText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:text="@string/differenceWeight"
        android:textAlignment="center"
        android:layout_marginBottom="20px"
        android:layout_weight="0.03" />
    <TextView
        android:id="@+id/differenceBMIText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:text="@string/differenceBMI"
        android:textAlignment="center"
        android:layout_marginBottom="150px"
        android:layout_weight="0.03" />

    <TextView
        android:id="@+id/shouldText"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:text="@string/differenceBMI"
        android:textAlignment="center"
        android:layout_marginBottom="20px"
        android:layout_weight="0.03" />
</LinearLayout>
